{
  "name": "@renegade-fanclub/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "init": "cp .dev.vars.example .dev.vars && bun run init:local",
    "check": "tsc && wrangler --experimental-json-config deploy --dry-run",
    "deploy": "wrangler --experimental-json-config deploy",
    "dev": "wrangler --experimental-json-config dev",
    "types": "wrangler --experimental-json-config types",
    "db:migrate:create": "wrangler d1 migrations create seahorse-sports-dev",
    "db:migrate:list": "wrangler d1 migrations list seahorse-sports-dev",
    "db:migrate:apply": "wrangler d1 migrations apply seahorse-sports-dev",
    "db:seed:local": "wrangler d1 execute seahorse-sports-dev --local --file=seed.sql",
    "init:local": "bun run db:clean && bun run db:deploy:local && bun run db:seed:local",
    "db:clean": "rm -rf .wrangler/state",
    "db:deploy:local": "bunx wrangler d1 execute seahorse-sports-dev --local --file=schema.sql",
    "db:deploy:remote": "bunx wrangler d1 execute seahorse-sports-dev --remote --file=schema.sql"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.2",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@renegade-fanclub/types": "workspace:*",
    "typescript": "^5.6.3",
    "wrangler": "^3.97.0"
  }
}
